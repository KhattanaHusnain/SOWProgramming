<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Image View -->
    <ImageView
        android:id="@+id/ivFullscreenImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:contentDescription="Full screen assignment image" />

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@drawable/gradient_overlay_top"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvFullImageTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Image 1"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnCloseFullscreen"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/circular_button_background"
            android:padding="6dp"
            app:tint="@android:color/white"
            android:contentDescription="Close full screen view" />

    </LinearLayout>

    <!-- Bottom Instructions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@drawable/gradient_overlay_bottom"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pinch to zoom â€¢ Double tap to reset"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:alpha="0.8" />

    </LinearLayout>

</RelativeLayout>