<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme for dark mode. -->
    <style name="Base.Theme.SOWProgramming" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color for dark mode. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary brand color for dark mode. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="colorSecondaryContainer">@color/ripple</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>

        <!-- Tertiary brand color for dark mode. -->
        <item name="colorTertiary">@color/accent</item>
        <item name="colorOnTertiary">@color/text_primary</item>

        <!-- Background colors for dark mode. -->
        <item name="android:colorBackground">@color/text_primary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Error color for dark mode. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar color for dark mode. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_dark</item>

        <!-- Dark theme customization. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/gray_light</item>
        <item name="android:textColorHint">@color/gray_medium</item>
    </style>

    <style name="Theme.SOWProgramming" parent="Base.Theme.SOWProgramming">
        <!-- Transparent system bars for edge-to-edge in dark mode. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>