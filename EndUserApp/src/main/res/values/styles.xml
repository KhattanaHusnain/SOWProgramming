<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Theme.NexCode.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize colors -->
        <item name="colorPrimary">#002B5B</item>
        <item name="colorPrimaryDark">#002B5B</item>
        <item name="colorAccent">#002B5B</item>
        <!-- Remove BottomNavigation default ripple -->
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="ChatMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ChatMessage.UserName">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ChatMessage.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ChatMessage.Time">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>

    <style name="ProfileStatLabelStyle">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="ProfileStatValueStyle">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <!-- Circle image style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Text appearance styles -->
    <style name="TextAppearance.App.Headline" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>



    <!-- Button styles -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <!-- Card styles -->
    <style name="CardView.App" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text input fields style -->
    <style name="CustomTextInputLayout" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/input_border</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

    <!-- Button style -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Social button style -->
    <style name="SocialButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Tab Text Appearance -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#757575</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- App bar styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <!-- Card styles -->
    <style name="CardStyle">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">0dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>


</resources>