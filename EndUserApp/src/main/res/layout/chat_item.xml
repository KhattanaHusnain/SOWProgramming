<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Received Message (Others) -->
    <LinearLayout
        android:id="@+id/others_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Profile Image with Online Status -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_profile"
            android:layout_gravity="bottom"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray_light" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- Message Bubble -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/message_bubble_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:minWidth="80dp">

                    <!-- Sender Name -->
                    <TextView
                        android:id="@+id/username_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="2dp"
                        android:visibility="visible" />

                    <!-- Message Text -->
                    <TextView
                        android:id="@+id/message_others"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello! How are you doing today?"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_primary"
                        android:autoLink="web|email|phone"
                        android:linksClickable="true" />

                    <!-- Message Status Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <!-- Edited Indicator -->
                        <TextView
                            android:id="@+id/edited_indicator_received"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="edited"
                            android:textSize="10sp"
                            android:textColor="@color/text_hint"
                            android:textStyle="italic"
                            android:layout_marginEnd="4dp"
                            android:visibility="gone" />

                        <!-- Timestamp -->
                        <TextView
                            android:id="@+id/message_time_others"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:30"
                            android:textSize="11sp"
                            android:textColor="@color/text_hint" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reaction Bar -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reactions_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- Sent Message (Current User) -->
    <LinearLayout
        android:id="@+id/current_user_message_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            android:gravity="end">

            <!-- Message Bubble -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/message_bubble_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary_light"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp"
                    android:minWidth="80dp">

                    <!-- Sender Name (Hidden for current user in group chat) -->
                    <TextView
                        android:id="@+id/username_current_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:alpha="0.9"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_gravity="end" />

                    <!-- Message Text -->
                    <TextView
                        android:id="@+id/message_current_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi! I'm doing great, thanks for asking!"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        android:textColor="@color/text_on_primary"
                        android:autoLink="web|email|phone"
                        android:linksClickable="true" />

                    <!-- Message Status Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="end"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <!-- Edited Indicator -->
                        <TextView
                            android:id="@+id/edited_indicator_sent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="edited"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:alpha="0.7"
                            android:textStyle="italic"
                            android:layout_marginEnd="4dp"
                            android:visibility="gone" />

                        <!-- Timestamp -->
                        <TextView
                            android:id="@+id/message_time_current_user"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12:32"
                            android:textSize="11sp"
                            android:textColor="@color/white"
                            android:alpha="0.8" />

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reaction Bar -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reactions_sent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!-- Loading Indicator for Sent Messages -->
    <ProgressBar
        android:id="@+id/message_loading"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:indeterminateTint="@color/primary"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/current_user_message_container"
        app:layout_constraintBottom_toBottomOf="@id/current_user_message_container" />

</androidx.constraintlayout.widget.ConstraintLayout>