<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:letterSpacing="0.02" />

        <!-- Profile Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_container_background"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditFullName"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Full Name"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Gender -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditGender"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Gender"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Semester -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Semester"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvSemester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditSemester"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Semester"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditPhone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Phone"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Degree -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Degree"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvDegree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditDegree"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Degree"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

            <!-- Date of Birth -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/profile_item_background"
                android:padding="18dp"
                android:elevation="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date of Birth"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/tvDateOfBirth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textSize="18sp"
                        android:textColor="@color/text_primary"
                        android:layout_marginTop="6dp"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnEditDateOfBirth"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:background="@drawable/edit_button_background"
                    android:contentDescription="Edit Date of Birth"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/primary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>