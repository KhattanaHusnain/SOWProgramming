                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text_color"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ PUACP WhatsApp Channel"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/whatsappLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click to Join"
                    android:textSize="12sp"
                    android:textColor="@color/link_color"
                    android:autoLink="web"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ PUACP IT Community"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/linkedinLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Click to join"
                    android:textSize="12sp"
                    android:textColor="@color/link_color"
                    android:autoLink="web"
                    android:paddingStart="16dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text_color"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Email: "
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text_color" />

                <TextView
                    android:id="@+id/emailLink"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="mujahid.husnain.56@gmail.com"
                    android:textSize="14sp"
                    android:textColor="@color/link_color"
                    android:autoLink="email" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ YouTube: Www.Youtube.Com/@SOWProgramming"
                android:textSize="14sp"
                android:textColor="@color/secondary_text_color" />

        </LinearLayout>

        <!-- Privacy Policy Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary_text_color"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

</LinearLayout>