<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_primary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Status Bar Spacing -->
        <View
            android:id="@+id/status_bar_space"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/status_bar_space"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="NexCode Logo"
            android:src="@drawable/logo" />

        <!-- App Name -->
        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_logo"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Welcome to Next-Gen Learning"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="normal" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_text"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Unlock your potential with AI-powered education tailored just for you"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.2" />

        <!-- Illustration -->
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/illustration"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_below="@id/tagline"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="Authentication Illustration"
            android:scaleType="centerCrop"
            android:src="@drawable/authentication_gif" />

        <!-- Auth Container Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/auth_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/illustration"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Login Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Login with Account"
                    android:textAllCaps="false"
                    android:textColor="@color/text_on_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary"
                    app:icon="@drawable/ic_login"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:iconTint="@color/text_on_primary"
                    app:cornerRadius="12dp"
                    app:rippleColor="@color/overlay_light"
                    style="@style/Widget.MaterialComponents.Button" />

                <!-- Or Divider -->
                <LinearLayout
                    android:id="@+id/divider_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/gray_light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="OR"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/gray_light" />

                </LinearLayout>

                <!-- Sign Up Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signup_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Create New Account"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_person_add"
                    app:iconGravity="start"
                    app:iconPadding="12dp"
                    app:iconTint="@color/primary"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp"
                    app:rippleColor="@color/selected" />

                <!-- Social Login Section -->
                <TextView
                    android:id="@+id/social_login_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="Continue with"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:cardBackgroundColor="@color/background_primary"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/gray_light"
                        app:strokeWidth="1dp">

                        <ImageButton
                            android:id="@+id/google_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Login with Google"
                            android:padding="12dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_google" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Footer Text -->
        <TextView
            android:id="@+id/footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/auth_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:gravity="center"
            android:text="AI-Powered E-Learning Platform\nSOWProgramming © 2025 • All Rights Reserved"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:lineSpacingMultiplier="1.3"
            android:alpha="0.8" />

    </RelativeLayout>
</ScrollView>