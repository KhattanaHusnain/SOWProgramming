<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Simple Loading Container -->
                <LinearLayout
                    android:id="@+id/loading_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/loading_progress"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="16dp"
                        android:indeterminateTint="@color/primary" />

                    <TextView
                        android:id="@+id/loading_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading profile..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Actual Content Container (will be shown after loading) -->
                <LinearLayout
                    android:id="@+id/actual_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Personal Information Dashboard -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Profile Header -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_centerHorizontal="true"
                                    android:src="@drawable/ic_profile"
                                    app:civ_border_color="@color/primary"
                                    app:civ_border_width="2dp" />
                            </RelativeLayout>

                            <!-- Personal Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <!-- Full Name -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_person"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Full Name"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_full_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Email -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_email"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Email"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Phone -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_phone"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Phone"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Date of Birth -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_cake"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Date of Birth"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_date_of_birth"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Gender -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_gender"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Gender"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_gender"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Degree -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_degree"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Degree"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_degree"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- Account Created On -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginEnd="12dp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/ic_calendar"
                                        app:tint="@color/primary"/>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Account Created On"
                                            android:textSize="12sp"
                                            android:textColor="@color/text_secondary" />

                                        <TextView
                                            android:id="@+id/txt_account_created"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Not specified"
                                            android:textSize="16sp"
                                            android:textColor="@color/text_primary" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Course Statistics -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Course Statistics"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="16dp" />

                            <!-- Course Statistics Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Enrolled"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/txt_enrolled_courses"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/primary"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Completed"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/txt_completed_courses"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/secondary"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Favourite"
                                        android:textSize="12sp"
                                        android:textColor="@color/text_secondary" />

                                    <TextView
                                        android:id="@+id/txt_favourite_courses"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/accent"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Progress Dashboard -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Learning Progress"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="16dp" />

                            <!-- Assignment Statistics -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Assignments Taken"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary" />

                                    <TextView
                                        android:id="@+id/txt_assignments_taken"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="16sp"
                                        android:textColor="@color/text_primary"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/assignmentHistory"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="History"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/info"
                                    app:cornerRadius="8dp"
                                    app:strokeWidth="1dp"
                                    app:strokeColor="@color/info"
                                    app:backgroundTint="@color/white"
                                    app:rippleColor="@color/selected"
                                    android:drawableEnd="@drawable/ic_arrow_forward"
                                    android:elevation="2dp" />

                            </LinearLayout>

                            <!-- Quiz Progress -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Quizzes Taken"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_primary" />

                                    <TextView
                                        android:id="@+id/txt_quizzes_taken"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="16sp"
                                        android:textColor="@color/text_primary"
                                        android:layout_marginTop="4dp" />
                                </LinearLayout>

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/quizHistory"
                                    android:layout_width="0dp"
                                    android:layout_height="48dp"
                                    android:layout_weight="1"
                                    android:layout_marginHorizontal="4dp"
                                    android:text="History"
                                    android:textAllCaps="false"
                                    android:textSize="14sp"
                                    android:textColor="@color/info"
                                    app:cornerRadius="8dp"
                                    app:strokeWidth="1dp"
                                    app:strokeColor="@color/info"
                                    app:backgroundTint="@color/white"
                                    app:rippleColor="@color/selected"
                                    android:drawableEnd="@drawable/ic_arrow_forward"
                                    android:elevation="2dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Certificates Panel -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_certificate"
                                app:tint="@color/secondary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Certificates Earned"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View your achievements and certificates"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txt_certificates_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Notification Toggle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_notifications"
                                app:tint="@color/primary"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Enable Notifications"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get notified about course updates and reminders"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_notifications"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:checked="true"
                                app:thumbTint="@color/primary"
                                app:trackTint="@color/gray_light" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Logout Option -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:id="@+id/layout_logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_logout"
                                app:tint="@color/error" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Logout"
                                android:textColor="@color/error"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>